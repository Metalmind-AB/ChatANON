# ChatANON Frontend Configuration Template
# Copy this file to .env and update with your values

# Development Server
PORT=3002
HOST=0.0.0.0
BROWSER=none
FAST_REFRESH=true

# API Configuration
# Update these to match your backend server address
REACT_APP_API_BASE_URL=http://localhost:8081
REACT_APP_WS_URL=ws://localhost:8081
REACT_APP_API_TIMEOUT=180000

# Feature Flags
REACT_APP_ENABLE_REASONING=true
REACT_APP_ENABLE_WEBSOCKETS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_TEMPLATES=true

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_SHOW_REASONING_DEFAULT=true
REACT_APP_AUTO_SAVE=true
REACT_APP_MAX_MESSAGE_LENGTH=50000

# Development Configuration
GENERATE_SOURCEMAP=true
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true